<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core">
  <Dialog id="VSQEdit" title="Kart Düzenleme Ekranı">
    <content>
      <VBox class="sapUiMediumMargin ">
                <Label labelFor="editVSQTitle" text="Başlık"/>
                <Input class="sapUiTinyMarginBottom" id="editVSQTitle" placeholder="Kart başlığını giriniz..."/>
                <Label labelFor="editVSQSubTitle" text="Alt Başlık"/>
                <Input class="sapUiTinyMarginBottom" id="editVSQSubTitle" placeholder="Kart alt başlığını giriniz..."/>
                <Label labelFor="editVSQDescription" text="Açıklama"/>
                <TextArea class="sapUiTinyMarginBottom" id="editVSQDescription" placeholder="Kart açıklamasını giriniz..." rows="3" width="18em"/>

      </VBox>
    </content>
    <beginButton>
      <Button text="Kaydet" press="onSaveEditPress"/>
    </beginButton>
    <endButton>
      <Button text="İptal" press="onCloseEditPress"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
