<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog id="VSQAdder" title="Sunucu Ekleme Ekranı">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Başlık"/>
                <Input id="inputVSQTitle" placeholder="Kart başlığını giriniz..."/>
                <Label text="Alt Başlık"/>
                <Input id="inputVSQSubTitle" placeholder="Kart alt başlığını giriniz..."/>
                <Label text="Açıklama"/>
                <TextArea id="inputVSQDescription" placeholder="Kart açıklamasını giriniz..." rows="3" width="18em"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Kaydet" press="onSaveTilePress"/>
        </beginButton>
        <endButton>
            <Button text="İptal" press="onCloseTilePress"/>
        </endButton>
    </Dialog>

</core:FragmentDefinition>
